<Window x:Class="DragDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragDrop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Rectangle Fill="#FFBBBBBB" Height="100" Stroke="Black" Width="100" MouseMove="rect_MouseMove" GiveFeedback="rect_GiveFeedback" AllowDrop="true" DragEnter="rect_DragEnter" DragLeave="rect_DragLeave" DragOver="rect_DragOver" Drop="rect_Drop"/>
    </Grid>
</Window>
